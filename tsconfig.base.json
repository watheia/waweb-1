{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "esnext",
    "lib": ["ES2020", "DOM", "ES2020.Promise"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@waweb/api.utils": ["libs/api/utils/src/index.ts"],
      "@waweb/atoms": ["libs/atoms/src/index.ts"],
      "@waweb/auth": ["libs/auth/src/index.ts"],
      "@waweb/config": ["libs/config/src/index.ts"],
      "@waweb/datocms": ["libs/datocms/src/index.ts"],
      "@waweb/icons": ["libs/icons/src/index.ts"],
      "@waweb/layout": ["libs/layout/src/index.ts"],
      "@waweb/message": ["libs/message/src/index.ts"],
      "@waweb/model": ["libs/model/src/index.ts"],
      "@waweb/organisms": ["libs/organisms/src/index.ts"],
      "@waweb/supabase": ["libs/supabase/src/index.ts"],
      "@waweb/theme": ["libs/theme/src/index.ts"],
      "@waweb/theme.styles/*": ["libs/theme/src/styles/*"],
      "@waweb/utils": ["libs/utils/src/index.ts"],
      "@waweb/views.blog": ["libs/views/blog/src/index.ts"],
      "@waweb/views.dashboard": ["libs/views/dashboard/src/index.ts"],
      "@waweb/views.gatekeeper": ["libs/views/gatekeeper/src/index.ts"],
      "@waweb/views.home": ["libs/views/home/src/index.ts"],
      "@waweb/views.profile": ["libs/views/profile/src/index.ts"],
      "@waweb/views.realtime": ["libs/views/realtime/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
